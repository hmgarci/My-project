<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeInput" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- reference our hint & error styles -->
        <item name="android:textColor">#292929</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">#292929</item>
        <item name="android:textCursorDrawable">@null</item>
        <!--<item name="android:fontFamily" tools:targetApi="16">@font/open_sans_regular</item>-->

        <!--Primary theme
       <item name="colorAccent">#58595b</item>
       Primary theme -->
        <item name="android:inputType">textNoSuggestions</item>
        <item name="colorControlNormal">#808285</item>
        <item name="colorControlActivated">#ffc20e</item>
        <item name="colorControlHighlight">#808285</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Hint" parent="TextAppearance.AppCompat"><!--Remover-->
        <item name="android:textSize">15dp</item>
        <item name="android:textColorHint">#808285</item>
        <item name="android:textColor">#808285</item>
        <!--<item name="android:fontFamily" tools:targetApi="16">@font/open_sans_regular</item>-->
        <item name="android:singleLine">false</item>
    </style>

    <style name="Error" parent="@android:style/TextAppearance"><!--Remover-->
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#808285</item>
    </style>

    <style name="myStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

</resources>
